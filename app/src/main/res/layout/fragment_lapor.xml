<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.lapor.LaporFragment">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_camera"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="50dp"
        android:id="@+id/fragmentlapor_camera"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textcoba"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:layout_width="150dp"
            android:id="@+id/fragmentlapor_btn_imgfromgallery"
            android:text="AMBIL DARI GALERI"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="150dp"
            android:id="@+id/fragmentlapor_btn_tookphoto"
            android:text="AMBIL FOTO"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>